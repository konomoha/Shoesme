{% extends "base_backoffice.html.twig" %}

{% block title %}
    Shoesme | Ajout - Chaussures
{% endblock %}

{% block body %}

<div class="d-flex justify-content-end">
    <a href="{{ path('home') }}" class="btn btn-outline-dark">Retour au site</a>
</div>


<div class="main-inscription" id="MainStock">
<div class="div-inscription p-4">

<h1 class="text-center">
    {% if Modification %}
        Modification chaussure {{Modification}}
    {% else %}
        Ajout nouvelle chaussure
    {% endif %}
</h1>

    <form action="" method="get">
        
        <h2 class="text-center">Voir si votre article a déjà des enregistrements :</h2>

        <label for="marque">Voir la liste des modèles :</label>
        <select name="model" id="model">
            {% for item in Chaussure %}
                <option value="{{item.model}}">{{item.marque}} {{item.model}}</option>
            {% endfor %}   
        </select>
        <button class="btn btn-dark ms-2" type="submit">Voir</button>

    </form>
{# {{dump(selecteurModel)}} #}
    {% if selecteurModel %}
        <table>
            {% for data in selecteurModel %}
                <td>{{data.marque}}</td>
                <td>{{data.model}}</td>
                <td>{{data.couleur}}</td>
                <td>{{data.pointure}}</td>
            {% endfor %}
        </table>
    {% endif %}
    



    {{form_start(formAdminShoes, {'attr': {'class': 'col-5  mx-auto my-5 bg-white form-inscription'}} ) }}

        {{form_row(formAdminShoes.sexe, {'attr': {'class': 'col-10 d-flex flex-row justify-content-between'}} ) }}  
        {{form_row(formAdminShoes.marque)}}
        {{form_row(formAdminShoes.model)}}
        {{form_row(formAdminShoes.type)}}
        {{form_row(formAdminShoes.matiere)}}
        {{form_row(formAdminShoes.descriptif)}}
        {{form_row(formAdminShoes.photo)}}
        {{form_row(formAdminShoes.photo2)}}
        {{form_row(formAdminShoes.photo3)}}
        {{form_row(formAdminShoes.photo4)}}
        {{form_row(formAdminShoes.prix)}}
        {{form_row(formAdminShoes.couleur)}}
        {{form_row(formAdminShoes.pointure)}}
        {{form_row(formAdminShoes.stock)}}

        {# {{form_row(formAdminShoes._token)}} #}

        <div class="text-center">
        <button class="btn btn-dark">
        {% if Modification %}
            Enregistrer les modifications
        {% else %}
            Enregistrer
        {% endif %}
        </button>
        </div>

    {{form_end(formAdminShoes)}}
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}  
    Hello ShooseMeController!
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset("css/home.css") }}">
{% endblock %}

{% block body %}

    {% for message in app.flashes('success_register') %}
    
        <div class="col-6 mx-auto text-center alert alert-success">{{message}}</div>

    {% endfor %}

<img src="{{ asset('img/banniereAccueil.jpg') }}" alt="banniere " class="w-100">

<br>

<h1 class="text-center mt-5"> Best-sellers</h1>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="{{ asset('img/nike/chaussure1/2.png') }}" class="d-block w-100" alt="...">
        </div>
    <div class="carousel-item">
      <img src="{{ asset('img/nike/chaussure1/3.png') }}" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="{{ asset('img/nike/chaussure1/4.png') }}" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="d-flex justify-content-center my-5 conteneur_best_seller">
  {% for data in chaussure_m %}
    <div class="d-flex mx-1 my-3 conteneur_image">

          <a href="{{path('details_article', {'id': data.id })}}" ><img src="{{ asset('img/' ~ data.photo) }}" class="card-img-top d-block best_seller img-fluid" alt="..."></a>

    </div>
  {% endfor %}
</div>


  <div class="d-flex justify-content-center my-5 conteneur_best_seller">
  {% for data in chaussure_f %} 
    
    <div class="d-flex mx-1 my-3 test conteneur_image">
      
          <a href=""><img src="{{ asset('img/' ~ data.photo) }}" class="card-img-top best_seller img-fluid" alt="..."></a>

    </div>

  {% endfor %}
  </div>

{% endblock %}

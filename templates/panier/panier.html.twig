{% extends 'base.html.twig' %}

{% block title %}Shoesme | Mon Panier {% endblock %}

{% block body %}

<h1 class="text-center mt-4 mb-5">
    {% if app.user %}
        Votre panier {{app.user.prenom|capitalize}}
    {% else %}
        Panier
    {% endif %}
</h1>
{# {{dump(dataPanier)}} #}

{% set qte = 0 %}
 
<div class="d-flex flex-row">
{% if dataPanier %}
<div class="" style="width: 60%;">

{% for data in dataPanier %}

    <div class="boite-1 d-flex flex-row mb-4">
        <div class="col-3 d-flex flex-row justify-content-start">
            <a href="" class="p-0"><img class="img-fluid" src="{{ asset('img/' ~ data.Chaussure.photo) }}" alt="" style="image-size: contain;"></a>
        </div>

        <div class=" col-5 ms-3 my-3">
            <strong class="my-3 fs-3">{{ data.Chaussure.model }}</strong><span>{{ data.Chaussure.marque }}</span>
            <p class="my-2">{{ data.Chaussure.descriptif }}</p>

                <div class="my-2 fs-4">Taille : {{data.Chaussure.pointure}}</div>
                <div class="my-2 fs-4">Couleur : {{data.Chaussure.couleur}}</div>
                <div class=" d-flex justify-content-between">

                    <a href="{{path('panier_add', {id: data.Chaussure.id})}}" class="btn btn-success {{(data.Quantite == data.Chaussure.stock)? 'disabled':''}}"><i class="bi bi-cart-plus"></i></a>
                    <a href="{{path('panier_remove', {id: data.Chaussure.id})}}" class="btn btn-warning"><i class="bi bi-cart-dash"></i></a>
            
                    <a href="{{path('details_article', {'id': data.Chaussure.id })}}" class="text-dark mx-auto">Détails article</a>

                    </div>
                </div>

            <div class="col-4 d-flex flex-row justify-content-end">
                <p class="fs-3 me-4"> {{ data.Chaussure.prix }} €</p>
                <a href="{{path('panier_delete', {id: data.Chaussure.id})}}" class="text-dark"><i class="bi bi-x-lg fs-3 me-3"></i></a>
            </div>
    </div>
{% endfor %}
</div>
{% for data in dataPanier %}
    {% set qte = qte + data.Quantite %}
{% endfor %}
    <div class="mt-5 boite-2" style=" margin-left: 60%; width: 40%;">
        <div class="boite-synth">
            <h2 class="ms-3 mt-4 mb-2">Synthèse de la commande</h2>
            
            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 mx-auto mt-5 mb-1"> {{ qte }} article(s)</div>
            </div>
            {% for data in dataPanier %}
                <div class="d-flex flex-row justify-content-between">
                    <div class="fs-4 mx-auto mt-2 mb-1 ">- {{ data.Chaussure.model}} ( {{data.Quantite}} pcs)............... {{data.Quantite * data.Chaussure.prix}} €</div>
                </div>
            {% endfor %}
            

            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 mx-5 mt-5 mb-1">Livraison</div>
                <div class="fs-3 mx-5 mt-5 mb-1">Gratuite</div>
            </div>

            <div class="d-flex flex-row justify-content-between">
                <div class="fs-5 ms-5 mt-5">Total...............</div><div class="fs-5 me-5 mt-5"><strong>
                {{total}}
                </strong></div>
            </div>
            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 ms-5 mb-5">TVA incluse...............</div><div class="fs-3 me-5 mb-5">{{ (total * 1.2)|round(2)}} €</div>
            </div>
            <div class="fs-3 d-flex justify-content-center mt-5 mb-1">
            <a href="{{path('commande')}}" class="bouton-commande mx-auto">Valider commande</a>
            </div>

        </div>
    </div>

</div>

{% else %}

<h2 class="text-center mx-auto fst-italic my-5"><i class="bi bi-bag"></i> Panier vide </h2>

{% endif %} 
    
    
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Shoesme | Mon Panier {% endblock %}

{% block body %}

<h1 class="text-center mt-4 mb-5">
    {% if app.user %}
        Votre panier {{app.user.prenom|capitalize}}
    {% else %}
        Panier
    {% endif %}
</h1>
{{dump(dataPanier)}}

<div class="d-flex flex-row">
{% if dataPanier %}
<div class="" style="width: 60%;">

{% for data in dataPanier %}

    <div class="boite-1 d-flex flex-row mb-4">
        <div class="boite-4 col-3 d-flex flex-row justify-content-start">
            <a href="" class="p-0"><img class="img-fluid " src="{{ asset('img/' ~ data.Chaussure.photo) }}" alt=""></a>
        </div>

        <div class=" col-5 ms-3 mt-3">
            <strong class="my-3 fs-3">{{ data.Chaussure.marque }}</strong>
            <p class="my-2">{{ data.Chaussure.descriptif }}</p>
                <div class="my-2 fs-4">Taille : 42</div>
                <div class=" d-flex justify-content-between">
                    <form method="post" class="col-3 m-0 p-0">
                            <select name="quantite" id="quantite" class="form-select col-6 text-center">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                    </form>

                    <a href="#" class="text-dark mx-auto">Détails article</a>
                    </div>
        </div>

        <div class="col-4 d-flex flex-row justify-content-end">
            <p class="fs-3 me-4"> {{ data.Chaussure.prix }} €</p>
            <a href="{{path('panier_delete', {id: data.Chaussure.id})}}" class="text-dark"><i class="bi bi-x-lg fs-3 me-3"></i></a>
        </div>
    </div>
{% endfor %}
</div>

    <div class="mt-5 boite-2" style=" margin-left: 60%; width: 40%;">
        <div class="boite-synth">
            <h2 class="ms-3 mt-4 mb-2">Synthèse de la commande</h2>
            
            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 mx-auto mt-5 mb-1">3 article(s)</div>
            </div>

            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 mx-5 mt-5 mb-1">Livraison</div>
                <div class="fs-3 mx-5 mt-5 mb-1">Gratuit</div>
            </div>

            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 ms-5 my-5">Total</div> <div class="fs-3 me-5 my-5"><strong>{{total}} €</strong></div>
            </div>
            <button > <a href="{{path('commande')}}">Test commande</a></button>

        </div>
    </div>

</div>

{% else %}

<h2 class="text-center mx-auto fst-italic my-5"><i class="bi bi-bag"></i> Panier vide </h2>

{% endif %} 
    
    
{% endblock %}

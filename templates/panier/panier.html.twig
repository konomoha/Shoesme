<div class="d-flex flex-row">
{% if dataPanier %}
<div class="" style="width: 60%;">

{% for data in dataPanier %}

    <div class="boite-1 d-flex flex-row mb-4">
        <div class="boite-4 col-3 d-flex flex-row justify-content-start">
            <a href="" class="p-0"><img class="img-fluid " src="{{ asset('img/' ~ data.Chaussure.photo) }}" alt=""></a>
        </div>

        <div class=" col-5 ms-3 mt-3">
            <strong class="my-3 fs-3">{{ data.Chaussure.marque }}</strong>
            <p class="my-2">{{ data.Chaussure.descriptif }}</p>
                <div class="my-2 fs-4">Taille : 42</div>
                <div class=" d-flex justify-content-between">
                    <form method="get" class="col-3 m-0 p-0">
                            <select name="quantite" id="quantite" class="form-select col-6 text-center">
                            {% for i in 0..(test) %}
                                 <option value="{{i}}"><a href="">{{i}}</a></option>
                            {% endfor %}
                              
                               

{% extends 'base.html.twig' %}

{% block title %}Shoesme | Mon Panier {% endblock %}

{% block body %}

<h1 class="text-center mt-4 mb-5">
    {% if app.user %}
        Votre panier {{app.user.prenom|capitalize}}
    {% else %}
        Panier
    {% endif %}
</h1>
{# {{dump(dataPanier)}} #}

{% set qte = 0 %}
{% for key in dataPanier %}
    {# {{dump(key.Chaussure.stock)}} #
    {# <option value="{{ item }}">{{ item }}</option> #}
{% endfor %}

<div class="d-flex flex-row">
    {% if dataPanier %}
        <div class="" style="width: 60%;">
            {% for data in dataPanier %}

                <div class="boite-1 d-flex flex-row mb-4">
                    <div class="col-3 d-flex flex-row justify-content-start">
                        <img class="img-fluid" src="{{ asset('img/' ~ data.Chaussure.photo) }}" alt="" style="image-size: contain;">
                    </div>

                    <div class=" col-5 ms-3 my-3">
                        <h3 class="mt-2 fs-2"><strong>{{ data.Chaussure.marque }}</strong></h3>
                        <span>{{ data.Chaussure.model }}</span>
                        <p class="my-2">{{ data.Chaussure.descriptif }}</p>

                            <div class="my-2 fs-4">Taille : {{data.Chaussure.pointure}}</div>
                            <div class="my-2 fs-4">Couleur : {{data.Chaussure.couleur}}</div>
                            <div class=" d-flex justify-content-between">
                                {# <form method="get" class="col-3 m-0 p-0">
                                        <select name="quantite" id="quantite" class="form-select col-6 text-center">
                                        {% for i in 1..(data.Chaussure.stock) %}
                                            <option value="{{i}}" >{{i}}</option>
                                        {% endfor %}
                                        </select> <button>Send</button>
                                </form> #}
                                <a href="{{path('panier_remove', {id: data.Chaussure.id})}}" class=""><i class="bi bi-dash-square text-secondary fs-5"></i>{#<i class="bi bi-cart-dash"></i>#}</a>
                                <div class="mx-2">{{data.Quantite}}</div>
                                <a href="{{path('panier_add', {id: data.Chaussure.id})}}" class=""><i class="bi bi-plus-square text-secondary fs-5"></i>{#<i class="bi bi-cart-plus"></i>#}</a>
                                
                                    
                                <a href="{{path('details_article', {'id': data.Chaussure.id })}}" class="text-dark mx-auto">Détails article</a>

                                </div>
                            </div>

                        <div class="col-4 d-flex flex-row justify-content-end">
                            <p class="fs-3 me-4"> {{ data.Chaussure.prix }} €</p>
                            <a href="{{path('panier_delete', {id: data.Chaussure.id})}}" class="text-dark"><i class="bi bi-x-lg fs-3 me-3"></i></a>
                        </div>
                </div>
            {% endfor %}
</div>

{% for data in dataPanier %}
    {% set qte = qte + data.Quantite %}
{% endfor %}

    <div class="mt-5" style=" margin-left: 60%; width: 40%;">
        <div class="boite-synth">
            <h2 class="ms-3 mt-4 mb-2">Synthèse de la commande</h2>
            
            {% if qte == 1 %}
            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 mx-auto mt-4 mb-4"> {{ qte }} article</div>
            </div>                
            {% else %}
            <div class="d-flex flex-row justify-content-between">
                <div class="fs-3 mx-auto mt-4 mb-4"> {{ qte }} articles</div>
            </div>                
            {% endif %}
            

            {% for data in dataPanier %}
                <div class="d-flex flex-row justify-content-between">
                    <div class="fs-4 ms-5 mb-1">{{data.Quantite}} {{ data.Chaussure.model}}</div>
                    <div class="d-flex flex-column justify-content-end">
                        <div class="fs-4 me-5 mb-1">{{data.Quantite * data.Chaussure.prix}}&nbsp€</div>
                    </div>
                </div>
            {% endfor %}            

            {% if total >= 100 %}                
                <div class="d-flex flex-row justify-content-between">
                    <div class="fs-3 mx-5 mt-5 mb-1">Livraison</div>
                    <div class="fs-3 mx-5 mt-5 mb-1">Gratuite</div>
                </div>
            {% else %}
                <div class="d-flex flex-row justify-content-between">
                    <div class="fs-3 mx-5 mt-5 mb-1">Frais de port</div>
                    <div class="fs-3 mx-5 mt-5 mb-1">9.90 €</div>
                </div>
            {% endif %}                
            
            {% if total <= 100 %}
                <div class="d-flex flex-row justify-content-between">
                    <div class="fs-2 ms-5 mt-2">Total</div><div class="fs-2 me-5 mt-2"><strong>
                    {{total + 9.90}} €
                    </strong></div>
                </div>
            {% else %}
                <div class="d-flex flex-row justify-content-between">
                    <div class="fs-2 ms-5 mt-2">Total</div><div class="fs-2 me-5 mt-2"><strong>
                    {{total}} €
                    </strong></div>
                </div>
                
            {% endif %}
            
            <div class="d-flex flex-row justify-content-between">
                <div class="ms-5 mb-5">Taxes</div><div class=" me-5 mb-5">{{ (total * 0.2)|number_format(2)}} €</div>
            </div>
            <div class="fs-3 d-flex justify-content-center mt-3 mb-2">
            <a href="{{path('commande')}}" class="bouton-commande mx-auto">Valider commande</a>
            </div>

        </div>
    </div>

</div>

{% else %}

<h2 class="text-center mx-auto fst-italic my-5"><i class="bi bi-bag"></i> Panier vide </h2>

{% endif %} 
    
    
{% endblock %}

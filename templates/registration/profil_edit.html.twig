{% extends "base.html.twig" %}
{% block title %}
    ShoesMe | Profil Edit
{% endblock %}

{% block body %}
     {{form_start(profilUpdate, {'attr': {'class': 'col-5 mx-auto my-5'}} ) }}

            {{form_row(profilUpdate.sexe, {'attr': {'class': 'd-flex flex-row'}} ) }}

        <div class="col-10">
            {{form_row(profilUpdate.nom)}}
            {{form_row(profilUpdate.prenom)}}
          
            {{form_row(profilUpdate.dateNaissance)}}
            {{form_row(profilUpdate.adresse)}}
        </div>
         <div class='d-flex flex-row'>       
            {{form_row(profilUpdate.ville, {'attr': {'class': 'col-3'}} ) }}
            {{form_row(profilUpdate.codePostal, {'attr': {'class': 'col-3'}} ) }}
        </div>
        <div class='col-5'>
            {{form_row(profilUpdate.telephone)}} 
        </div>
       
        <div class='col-10'>
            {{form_row(profilUpdate.avatar)}}            
        </div>

        {% if avatarActuel %}
        <p>
            <em>Vous pouvez uploader une nouvelle photo si vous souhaitez la modifier</em>
            <img src="{{ asset('avatar/' ~ avatarActuel)}}"  class="col-12 img-responsive">
        </p>

    {% endif %}

    <div class="mx-auto text-center">
        <button class="col-4 btn btn-dark text-white">Valider</button>
    </div>
    
    {# {{ form_row(profilUpdate._token) }}  #}


        {{form_end(profilUpdate)}}
    <div>
{% endblock %}
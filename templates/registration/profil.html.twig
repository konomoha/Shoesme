{% block title %}Blog Symfony | Profil{% endblock %}

{% block body %}

<div class="img-fond-profil">
    <div class="trans-1 pb-5">
        <div id="connexion-2">
            <h2 class="text-center my-4">Bienvenue <span class="text-danger">{{profildata.prenom|upper}}</h2>

            {% if profildata.roles.0 == 'ROLE_ADMIN' %}
                    {% if profildata.sexe == 'm' %}
                        <p class="text-center text-secondary fs-5 mb-5">Tu es tellement un beau gosse que tu es <span class="text-success">ADMINISTRATEUR</span> du site</p>
                        {% else %}
                        <p class="text-center text-secondary fs-5 mb-5">Tu es tellement une bombasse que tu es <span class="text-success">ADMINISTRATRICE</span> du site</p>
                    {% endif %}
                
            {% endif %}


            <div class="mx-auto text-center my-4">
                <h5 class="text-center my-4 fs-5">Vos informations :</h5>

                <p class="my-2"><span>Nom:</span> {{ profildata.nom|upper}}</p>
                <p class="my-2"><span>Prenom:</span> {{ profildata.prenom|capitalize }}</p>
                <p class="my-2"><span>Adresse:</span> {{ profildata.adresse }}</p>
                <p class="my-2"><span>Ville:</span> {{ profildata.ville|upper }}</p>
                <p class="my-2"><span>Codepostal:</span> {{ profildata.codepostal }}</p>

                <a href="{{path('app_profil_edit', {'id': profildata.id})}} " class="btn btn-outline-secondary my-3">Modifier</a>    
            </div>
        </div>
    </div>

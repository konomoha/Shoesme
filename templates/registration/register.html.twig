{% extends "base.html.twig" %}

{% block title %}
    Shoesme| Inscription
{% endblock %}

{% block body %}

<main class="main-inscription">
    <div class="div-inscription p-5">
        

        {{form_start(registrationForm, {'attr': {'class': 'col-3 mx-auto my-5 form-inscription bg-white '}} ) }}

        <h1 class="text-center my-4">Inscription</h1>

                {{form_row(registrationForm.sexe, {'attr': {'class': 'd-flex flex-row py-3'}} ) }}

            <div class="col-12">
                {{form_row(registrationForm.email)}}  
                {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
                }) }}
                {{form_row(registrationForm.nom)}}
                {{form_row(registrationForm.prenom)}}                              
                {{form_row(registrationForm.dateNaissance)}}
                {{form_row(registrationForm.adresse)}}
            </div>
            <div class='d-flex flex-row justify-content-start'>
                <div class="me-4">     
                    {{form_row(registrationForm.ville) }}
                </div>
                <div>
                    {{form_row(registrationForm.codePostal) }}
                </div>
            </div>
            <div class='col-6'>
                {{form_row(registrationForm.telephone)}} 
            </div>
        
            <div class='col-12'>
                {{form_row(registrationForm.avatar)}}            
            </div>

        <div class="mx-auto text-center">
            <button class="col-4 btn btn-dark text-white">Valider</button>
        </div>

        {{form_end(registrationForm)}}
    <div>
</main>
{% endblock %}

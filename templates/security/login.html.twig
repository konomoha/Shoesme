{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    
    <h1 class="h3 my-3 font-weight-normal text-center">Connectez-vous</h1>

    {% if error %}
        <div class="alert alert-danger text-center col-2 mx-auto mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for message in app.flashes('success_edit') %}

    <div class="bg-success text-center p-3 mx-auto col-5 ">{{ message }}</div>
    

    {% endfor %}


    {% if app.user %}
        <div class="mb-3">
            Bienvenue {{ app.user.username }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% endif %}
    
    <form method="post" class="col-2 mx-auto">
        
        <label class="my-2" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="my-2" for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary my-3 mx-auto d-block px-2" type="submit">
            Se connecter
        </button>
    </form>
{% endblock %}

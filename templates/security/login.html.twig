{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="trans">
<div id="connexion">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for message in app.flashes('success') %}

    <div class="bg-success text-center p-3 mx-auto col-5 ">{{ message }}</div>

    {% endfor %}


    {% if app.user %}
        <div class="mb-3">
            Bienvenue {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h-3 mb-3 font-weight-normal text-center">Connexion</h1>
    <div class="my-3">
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-1" autocomplete="email" required autofocus>
    </div>
    <div  class="my-3">
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control mt-1" autocomplete="current-password" required>
    <div class="d-flex justify-content-end">
    <a href="" class="text-black lien-inscrip fs-sm">Mot de passe oublié ?</a>
    </div>
    </div>

    <div class="d-flex justify-content-end">
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary px-2 mb-5" type="submit">
        Se connecter
    </button>
    </div>
</form>
<p class="text-center">Pas encore de compte ? <a href="" class="text-black lien-inscrip">S'inscrire</a></p>
</div>
</div>
{% endblock %}
